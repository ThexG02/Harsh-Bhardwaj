package merryjane;

import java.util.Scanner;

public class precfo {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int n =  sc.nextInt();
		for(int i=0;i<n;i++) {
			//sPACES 
			for(int j=n;j>i;j--) {
				System.out.print(" ");
			}
			//stars 
			for(int j=0;j<n;j++) {
				if(i==0||j==0||i==n-1||j==n) {
				System.out.print(" *");}
				else{
					System.out.print(" ");
				}
			}
			
			
			System.out.println();
		}


		
	
}
	
}
